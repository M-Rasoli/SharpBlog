@page
@model App.EndPoints.Presentation.RazorPages.Pages.Account.LoginModel
@{
    ViewData["Title"] = "ورود";
}

<div class="fixed inset-0 flex items-center justify-center px-4 z-[60]">
    <div class="w-full max-w-sm bg-white rounded-2xl p-8 shadow-3xl lg:p-12 transition-all duration-500 border border-gray-100">

        <header class="text-center mb-8">
            <h1 class="text-4xl font-black text-gray-800 tracking-tight mb-2 app-logo">Login</h1>
            <p class="text-gray-500 text-sm">ورود به صفحه پروفایل</p>
        </header>

        <form method="post" class="space-y-6">
            <div>
                <label for="username" class="block text-sm font-medium text-gray-700 mb-1">شماره موبایل:</label>
                <input type="tel" asp-for="Model.UserName" class="w-full p-3 border border-gray-300 rounded-lg text-right focus:ring-2 focus:ring-purple-400 focus:border-purple-500 transition duration-150" required>
            </div>

            <div>
                <label for="password" class="block text-sm font-medium text-gray-700 mb-1">رمز عبور:</label>
                <input type="password" asp-for="Model.Password" placeholder="••••••••" class="w-full p-3 border border-gray-300 rounded-lg text-right focus:ring-2 focus:ring-purple-400 focus:border-purple-500 transition duration-150" required>
            </div>

            <button type="submit"
                    class="w-full bg-gradient-to-r from-purple-600 via-purple-500 to-pink-500 
               hover:from-purple-700 hover:to-pink-600 
               text-white font-bold py-4 px-6 rounded-xl text-lg 
               shadow-xl hover:shadow-2xl 
               transform hover:scale-[1.03] active:scale-100 
               transition-all duration-300 mt-6 
               focus:ring-4 focus:ring-purple-300">
                ورود
            </button>
        </form>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="mt-4 text-center text-sm text-red-600">@Model.Message</div>
        }

        <div class="mt-8 text-center text-sm space-y-3">
            <a href="#" class="block text-purple-600 hover:text-purple-700 font-medium">رمز عبور خود را فراموش کرده‌ام</a>
            <p class="text-gray-600">
                حساب کاربری ندارید؟
                <a asp-page="/Account/Register" class="text-purple-600 hover:text-purple-700 font-bold mr-1">ثبت نام کنید</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // این خط باعث می‌شه ایکون‌ها دوباره رندر بشن بعد از اینکه صفحه کامل لود شد
        document.addEventListener("DOMContentLoaded", function () {
            lucide.createIcons();
        });
    </script>
}