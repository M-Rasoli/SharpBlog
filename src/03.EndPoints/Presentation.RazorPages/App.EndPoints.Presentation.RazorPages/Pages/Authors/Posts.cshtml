@page 
@model App.EndPoints.Presentation.RazorPages.Pages.Authors.PostsModel
@{
    Layout = "Shared/_LayoutProfile";
    ViewData["Title"] = "پنل";

}
<main class="flex-1 overflow-x-hidden overflow-y-auto md:mr-64 p-6 transition-all duration-300">

    <section id="table-section" class="mb-8">
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">مدیریت پست ها</h2>
        <!-- دکمه پست جدید - سمت راست + آیکون کاملاً درست -->
        <div class="flex justify-start mb-8">
            <a asp-page="/Posts/Create"
               class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-purple-600 via-pink-500 to-red-500 text-white rounded-full shadow-2xl hover:shadow-purple-500/50 transform hover:scale-110 transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-purple-300">
       
                <!-- آیکون + ضخیم و بزرگ (با SVG دستی که ۱۰۰٪ کار می‌کنه) -->
                <svg class="w-9 h-9" fill="none" stroke="currentColor" stroke-width="4" viewBox="0 0 24 24">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
       
            </a>
        </div>
        <div class="card p-6">

            <!-- Table Container (Responsive Scroll) -->
            <div class="overflow-x-auto rounded-lg border border-gray-200">
                <table class="min-w-full divide-y divide-gray-200" id="user-table">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                عنوان
                            </th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                متن
                            </th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                تصویر
                            </th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                زمان انتشار
                            </th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                دسته بندی
                            </th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                عملیات
                            </th>

                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200" id="user-table-body">

                        @foreach (var post in Model.Posts)
                        {
                            <tr class="hover:bg-gray-50 transition duration-150">

                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@post.Title</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @(post.Text.Length > 20 ? post.Text.Substring(0, 20) + "..." : post.Text)
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    <div class="flex justify-center">
                                        @if (!string.IsNullOrEmpty(post.ImgUrl))
                                        {
                                            <img src="/@post.ImgUrl" 
                                                 alt="@post.Title" 
                                                 class="w-16 h-20 object-cover rounded-lg shadow-md border border-gray-200 hover:shadow-lg transition-shadow duration-200">
                                        }
                                        else
                                        {
                                            <div class="w-16 h-20 bg-gray-200 border-2 border-dashed border-gray-400 rounded-lg flex items-center justify-center">
                                                <i data-lucide="image-off" class="w-8 h-8 text-gray-400"></i>
                                            </div>
                                        }
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@post.CreatedAtShamsi</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@post.Category</td>


                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-4 space-x-reverse">
                                    <!-- دکمه ویرایش -->
                                    <a asp-page="/Posts/Edit" 
                                       asp-route-Id="@post.Id" 
                                       class="inline-block px-4 py-2 bg-blue-600 text-white text-xs rounded-lg hover:bg-blue-700 transition shadow-md">
                                        ویرایش
                                    </a>

                                    <!-- دکمه مشاهده کامنت‌ها - خفن و جذاب -->
                                    <a asp-page="/Authors/PostComments" 
                                       asp-route-Id="@post.Id" 
                                       class="inline-block px-4 py-2 bg-gradient-to-r from-purple-600 via-pink-500 to-amber-500 text-white text-xs rounded-lg hover:shadow-xl transform hover:scale-105 transition shadow-md font-medium">
                                        <i data-lucide="message-square" class="w-4 h-4 inline-block align-text-bottom"></i>
                                        کامنت‌ها 
                                    </a>

                                    <!-- دکمه حذف -->
                                    <form asp-page-handler="Delete" asp-route-Id="@post.Id" method="post" class="inline">
                                        <button type="submit" 
                                                onclick="return confirm('مطمئنی می‌خوای این پست و همه کامنت‌هاش حذف بشه؟');"
                                                class="px-4 py-2 bg-red-600 text-white text-xs rounded-lg hover:bg-red-700 transition shadow-md">
                                            حذف
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </section>

</main>
